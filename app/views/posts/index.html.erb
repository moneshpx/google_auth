<% if current_user %>
  <h2>User Email: <%= current_user.email %></h2>
  <% if current_user.avatar_url.present? %>
    <%= image_tag(current_user.avatar_url)%><br><br>
  <% else %>
      <%= image_tag("users-vector-icon-png.jpg") %><br>
  <% end %>
  <%= button_to "Logout", destroy_user_session_path, data: {turbo: false}, method: :delete%><br>
<%else%>
  <%= link_to "Login", new_user_session_path %><br><br>
  <%= link_to "Create Account",new_user_registration_path %>
<%end%>


<%= link_to "New Post", new_user_post_path(current_user.id), class: "btn btn-primary" %>